<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MyTimetableActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="我的排课"
                android:textColor="@color/cardview_dark_background"
                android:textSize="40dp"></TextView>

            <com.example.EasyTimetable.View.ItemView
                android:id="@+id/i1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:left_icon="@drawable/ic_about"
                app:left_text="待审核" />


            <ListView
                android:id="@+id/listview_teacher1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"></ListView>

            <com.example.EasyTimetable.View.ItemView
                android:id="@+id/i2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:left_icon="@drawable/ic_about"
                app:left_text="审核通过" />


            <ListView
                android:id="@+id/listview_teacher2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"></ListView>

            <com.example.EasyTimetable.View.ItemView
                android:id="@+id/i3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:left_icon="@drawable/ic_about"
                app:left_text="审核被打回" />


            <ListView
                android:id="@+id/listview_teacher3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"></ListView>

            <Button
                android:id="@+id/back"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:paddingLeft="25dp"
                android:paddingTop="6dp"
                android:paddingRight="25dp"
                android:paddingBottom="8dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>